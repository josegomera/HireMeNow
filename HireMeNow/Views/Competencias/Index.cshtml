@model IEnumerable<HireMeNow.Models.Competencia>
@{
    ViewBag.Title = "Competencias";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<style>
    h2, th, td {
        text-align: center;
    }
</style>
<hr />
<h2>Listado de Competencia</h2>
<hr />
<p>
    @Html.ActionLink("Nueva Competencia", "New", "", htmlAttributes: new { @class = "btn btn-outline-primary" })
</p>
<table class="table" id="competencias">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idiomas.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado.Estados)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Creado)
                </th>*@

            <th></th>
        </tr>
    </thead>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idiomas.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado.Estados)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Creado)
                </td>*@
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-outline-success" })
            </td>
        </tr>
    }

</table>
@section scripts
{
    <script>
        $(document).ready(function () {

            $("#competencias").DataTable();

        });
    </script>
}