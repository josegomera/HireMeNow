@model IEnumerable<HireMeNow.Models.Empleado>

@{
    ViewBag.Title = "Empleados";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}


<style>
    h2, th, td {
        text-align: center;
    }
</style>

<hr />
<h2>Listado de Empleados</h2>
<hr />

<table class="table" id="empleados">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Puestos.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Puestos.Departamentos.Departamentos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaIngreso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalarioMensual)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estados.Estados)
            </th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cedula)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apellidos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Puestos.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Puestos.Departamentos.Departamentos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaIngreso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SalarioMensual)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estados.Estados)
        </td>
    </tr>
    }
</table>


@section scripts
{
<script>
    $(document).ready(function () {
        $("#empleados").DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
        });
    });
</script>
}