@model IEnumerable<HireMeNow.Models.Departamento>

@{
    ViewBag.Title = "Departamentos";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<style>
    h2, th, td {
        text-align: center;
    }
</style>

<hr />

<h2>Listado de Departamentos</h2>
<hr />

<p>
    @Html.ActionLink("Agregar Departamento", "Create", "", htmlAttributes: new { @class = "btn btn-outline-primary" })
</p>
<table class="table" id="departamentos">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Departamentos)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Creado)
                </th>*@
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Departamentos)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Creado)
                </td>*@
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-outline-success" })
            </td>
        </tr>
    }

</table>
@section scripts
{
    <script>
        $(document).ready(function () {

            $("#departamentos").DataTable();

        });
    </script>
}